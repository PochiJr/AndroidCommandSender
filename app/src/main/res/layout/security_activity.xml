<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.androidcommandsender.CommandSenderActivity">

    <TextView
        android:paddingTop="20dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:id="@+id/Puerta"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Puerta X"
        android:textSize="30sp"
        />
    <EditText
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingTop="30dp"
        android:id="@+id/IPEditText"
        android:hint="Inserte la dirección IP"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="5"
        android:id="@+id/Panel_botones"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="30dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="comando1"
            android:text="Comando1"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="comando2"
            android:text="Comando2"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="comando3"
            android:text="Comando3"/>

    </LinearLayout>

    <Button
        android:id="@+id/initConnection"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/green"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="INICIAR CONEXIÓN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />




</LinearLayout>